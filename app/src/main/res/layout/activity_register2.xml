<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registerActivity2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registerTV"
            android:text="Register"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name1"
            android:hint="Name"
            android:inputType="text"
            android:layout_below="@+id/registerTV" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/NID1"
            android:hint="National Identification"
            android:inputType="number"
            android:layout_below="@+id/name1" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email1"
            android:hint="Email"
            android:inputType="text"
            android:layout_below="@+id/NID1" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone1"
            android:hint="Contact number"
            android:inputType="text"
            android:layout_below="@+id/email1" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address1"
            android:hint="Address"
            android:inputType="text"
            android:layout_below="@+id/phone1" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password1"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_below="@+id/address1" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rePassword1"
            android:hint="re-enter Password"
            android:inputType="textPassword"
            android:layout_below="@+id/password1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userSelect1"
            android:layout_below="@+id/rePassword1"
            android:layout_marginTop="10dp"
            android:text="Select user:"
            android:textSize="17sp"
            />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rePassword1"
            android:layout_toRightOf="@+id/userSelect1"
            android:layout_toEndOf="@+id/userSelect1"
            android:layout_alignBottom="@+id/userSelect1"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registerBtn"
            android:layout_below="@+id/userSelect1"
            android:layout_marginTop="25dp"
            android:text="Submit"
            android:background="#40e0d0"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginTV"
            android:layout_below="@+id/registerBtn"
            android:text="Have an account already? Sign in Here"
            android:textColor="#0000FF"
            android:layout_margin="2dp"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:textAlignment="center"
            />
    </RelativeLayout>
</ScrollView>